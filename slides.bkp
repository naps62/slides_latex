\section{Conceitos teóricos}
\subsection{Antes de começar}
\frame{\tableofcontents[currentsection,currentsubsection]}
\begin{frame}[fragile]
	\frametitle{Antes de começar}
	
	\begin{Verbatim}
	\documentclass{article}
	\begin{document}
	Hello World!    % isto continua a representar
	                % um comentário 
	\end{document}
	\end{Verbatim}
	\begin{block}{Em \LaTeX}
	\begin{itemize}
	\item os comandos começam sempre por \emph{backslash} \Verb|\|
	\item os \textbf{ambientes} são sempre definidos por \Verb|{...}| e as opções por \Verb|[...]|
	\item \Verb|\\| corresponde a uma quebra de linha
	\item muitos espaços ou tabulações são interpretados como um único espaço
	\end{itemize}
	\end{block}

\end{frame}
